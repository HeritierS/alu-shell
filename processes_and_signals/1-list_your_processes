#!/usr/bin/env bash
# list all my pid
#!/bin/bash

echo "USER       PID %CPU %MEM    VSZ   RSS TTY      STAT START   TIME COMMAND"
echo "------------------------------------------------------------------------"

# Get the process information using ps command
processes=$(ps -e -o user,pid,%cpu,%mem,vsz,rss,tty,stat,start,time,command --forest)

# Display the process hierarchy with indentation
echo "$processes" | awk 'BEGIN{ OFS="\t" } { for (i=1; i<NF-1; i++) { printf("|   ") } print "|--", $NF }'


